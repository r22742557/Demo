<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">   
<item android:state_pressed="true" >
    
    <shape
        android:shape="ring"
        android:useLevel="false"
        android:innerRadius="0dp"
        android:thickness="60dp"
        >
            	<gradient
            	    android:type="radial" 
            	    android:gradientRadius="60" 
        		    android:startColor="#66CDAA"
        		    android:centerColor="#2E8B57"
        		    android:endColor="#66CDAA"
        		    android:angle="270"	
        		    	/>    
                
    </shape>
    
    </item>    <!-- pressed -->
<item android:state_focused="true" android:drawable="@color/red" />   
<item>
    <shape
        android:shape="ring"
        android:useLevel="false"
        android:innerRadius="0dp"
        android:thickness="60dp"
        >
        		<gradient 
        		    android:type="radial" 
            	    android:gradientRadius="60"
        		    android:startColor="#66CDAA"
        		    
        		    android:endColor="#66CDAA"
        		    android:angle="270"	
        		    	/>
    	        
    </shape>
</item>  <!-- default -->
</selector>